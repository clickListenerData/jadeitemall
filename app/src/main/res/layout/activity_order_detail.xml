<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Personal.activity.OrderDetailActivity"
    android:background="@color/white_default">
    <include layout="@layout/item_title"
        android:id="@+id/title"/>

    <ScrollView
        android:id="@+id/sl_all"
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待审核"
        android:textSize="17sp"
        android:textColor="@color/green_06A366"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_13"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_13"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_goodsImage"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="113dp"
                android:layout_height="84dp"
                android:src="@drawable/ic_img_default"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_goodsImage"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_goodsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_14"
                    tools:text="糯冰种飘翠福瓜挂件" />

                <TextView
                    android:id="@+id/tv_goodsNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_gray2"
                    android:textSize="@dimen/sp_14"
                    tools:text="ACS322332" />

                <TextView
                    android:id="@+id/tv_goodsPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/text_red"
                    tools:text="￥3980.00" />
            </LinearLayout>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_C8C7CC"
                android:layout_below="@+id/iv_goodsImage"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="订单信息"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:layout_marginLeft="26dp"/>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="创建时间"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:layout_marginLeft="26dp"/>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="产品编号"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:layout_marginLeft="26dp"/>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

            <TextView
                android:id="@+id/tv_orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="订单号"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:layout_marginLeft="26dp"/>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

            <TextView
                android:id="@+id/tv_shopName"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="商家名称"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:layout_marginLeft="26dp"/>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

            <TextView
                android:id="@+id/tv_zhengce"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="享有政策"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:layout_marginLeft="26dp"/>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="付款方式"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:layout_marginLeft="26dp"/>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="收货信息"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:layout_marginLeft="26dp"/>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

            <TextView
                android:id="@+id/tv_shoujianname"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="收件人"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:layout_marginLeft="26dp"/>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="联系电话"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:layout_marginLeft="26dp"/>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="收件地址"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:layout_marginLeft="26dp"/>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>
            <LinearLayout
                android:id="@+id/ll_wuliu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="物流信息"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center"
                    android:layout_marginLeft="26dp"/>
                <View
                    style="@style/LineGray"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"/>
                <TextView
                    android:id="@+id/tv_wuliu"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="物流单号"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:layout_marginLeft="26dp"/>
                <View
                    style="@style/LineGray"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"/>
                <TextView
                    android:id="@+id/tv_wuliufuwu"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="物流服务商"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:layout_marginLeft="26dp"/>
                <View
                    style="@style/LineGray"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </android.support.v7.widget.RecyclerView>
                </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_service_n"
            android:text="联系客服"
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:layout_marginLeft="@dimen/dp_13"/>
        <TextView
            android:id="@+id/tv_order"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="取消订单"
            android:textColor="@color/white_default"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_sure"
            android:textSize="@dimen/sp_15"
            android:layout_marginRight="@dimen/dp_13"/>


    </RelativeLayout>
    <include layout="@layout/item_loading"
        android:id="@+id/loading"/>
</RelativeLayout>