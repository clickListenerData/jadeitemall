<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Personal.activity.SureCustomerActivity"
    android:orientation="vertical"
    android:background="@color/white_default">
    <include layout="@layout/item_title"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_13"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_goodsImage"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="113dp"
                android:layout_height="84dp"
                android:src="@drawable/ic_img_default"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_goodsImage"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_goodsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_14"
                    tools:text="糯冰种飘翠福瓜挂件" />

                <TextView
                    android:id="@+id/tv_goodsNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_gray2"
                    android:textSize="@dimen/sp_14"
                    tools:text="ACS322332" />

                <TextView
                    android:id="@+id/tv_goodsPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/text_red"
                    tools:text="￥3980.00" />
            </LinearLayout>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/iv_goodsImage"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginTop="19dp"/>
    <TextView
        android:id="@+id/tv_jifen"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="返回积分"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginLeft="26dp"/>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="退货说明"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
        <EditText
            android:id="@+id/et_jifen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="18dp"
            android:hint="选填"
            android:textSize="@dimen/sp_13"
            android:textColorHint="@color/black_333333"
            android:textColor="@color/black_333333"
            android:background="@null"/>

    </LinearLayout>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18" />

    <RelativeLayout
        android:id="@+id/rl_reson"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:id="@+id/tv_liyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货理由"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"/>
        <TextView
            android:id="@+id/tv_reson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/tv_liyou"
            android:layout_toLeftOf="@+id/iv_go"
            android:layout_marginRight="7dp"/>
        <ImageView
            android:id="@+id/iv_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/global_btn_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"/>

    </RelativeLayout>

    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_submint"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="提交"
        android:textColor="@color/black_333333"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="44dp"
        android:background="@color/gray_EFEFF4"/>



</LinearLayout>