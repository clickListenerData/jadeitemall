<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Personal.activity.EmeraldsDetailActivity">
    <include layout="@layout/item_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        app:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_goodsImage"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="113dp"
            android:layout_height="84dp"
            android:src="@drawable/ic_img_default"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_goodsImage"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                tools:text="糯冰种飘翠福瓜挂件" />

            <TextView
                android:id="@+id/tv_goodsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/sp_14"
                tools:text="ACS322332" />

            <TextView
                android:id="@+id/tv_goodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="18dp"
                android:textColor="@color/text_red"
                tools:text="￥3980.00" />
        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_C8C7CC"
            android:layout_below="@+id/iv_goodsImage"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="购买时间 20818-09-12"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginLeft="26dp"/>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"/>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="订单号  156226989"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginLeft="26dp"/>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="购买价格  365430"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginLeft="26dp"/>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"/>

    <TextView
        android:id="@+id/tv_fangshi"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="购买方式"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginLeft="26dp"/>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"/>
    <TextView
        android:id="@+id/tv_img"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="查看产品图片"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="70dp"
        android:background="@color/bg_EFEFF4"/>
    <TextView
        android:id="@+id/tv_jifen"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="兑换积分"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="10dp"
        android:background="@color/bg_EFEFF4"/>
    <TextView
        android:id="@+id/tv_shouyi"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="查看积分收益"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="10dp"
        android:background="@color/bg_EFEFF4"/>
    <TextView
        android:id="@+id/tv_tihuo"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="提货"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="10dp"
        android:background="@color/bg_EFEFF4"
        android:layout_marginBottom="30dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>