<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Personal.activity.CusetomerOrderDetailActivity">
    <include layout="@layout/item_title"/>
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="审核中"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:textSize="17sp"
        android:textColor="@color/green_06A366"
        android:layout_marginLeft="@dimen/dp_14"/>

    <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_goodsImage"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="113dp"
                        android:layout_height="84dp"
                        android:src="@drawable/ic_img_default"
                        android:scaleType="fitXY" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv_goodsImage"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_goodsName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/sp_14"
                            tools:text="糯冰种飘翠福瓜挂件" />

                        <TextView
                            android:id="@+id/tv_goodsNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/text_gray2"
                            android:textSize="@dimen/sp_14"
                            tools:text="ACS322332" />

                        <TextView
                            android:id="@+id/tv_goodsPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:layout_marginTop="18dp"
                            android:textColor="@color/text_red"
                            tools:text="￥3980.00" />
                    </LinearLayout>
                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/line_C8C7CC"
                        android:layout_below="@+id/iv_goodsImage"
                        android:layout_marginTop="10dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="退款原因"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
        <TextView
            android:id="@+id/tv_yuanyin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="不喜欢"
            android:textColor="@color/black_444444"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
    </LinearLayout>

            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="退款说明"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
        <TextView
            android:id="@+id/tv_shuoming"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="无"
            android:textColor="@color/black_444444"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
    </LinearLayout>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="退款编号"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="1563256+6"
            android:textColor="@color/black_444444"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
    </LinearLayout>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="申请时间"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="2018-12-09"
            android:textColor="@color/black_444444"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
    </LinearLayout>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="退款积分"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
        <TextView
            android:id="@+id/tv_jifen"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="6000"
            android:textColor="@color/black_444444"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
    </LinearLayout>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_kefu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_service_n"
        android:text="联系客服"
        android:textColor="@color/black_333333"
        android:gravity="center_vertical"
        android:textSize="17sp"
        android:layout_marginLeft="@dimen/dp_13"/>

</LinearLayout>