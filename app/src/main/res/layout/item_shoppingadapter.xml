<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SlidingPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:id="@+id/slide">
    <RelativeLayout
        android:id="@+id/ll_type"
        android:paddingTop="9dp"
        android:layout_width="60dp"
        android:layout_height="115dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/global_btn_del"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:paddingTop="9dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/selector_white"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="113dp"
            android:layout_height="84dp"
            app:cardCornerRadius="5dp"
            >

            <ImageView
                android:id="@+id/iv_goodsImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_img_default"
                android:scaleType="fitXY"
                />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/cardView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                android:text="糯冰种飘翠福瓜挂件" />

            <TextView
                android:id="@+id/tv_goodsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/sp_14"
                android:text="ACS322332" />

            <TextView
                android:id="@+id/tv_goodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="18dp"
                android:textColor="@color/text_red"
                android:text="￥3980.00" />

            <View style="@style/LineGray"
                android:layout_marginTop="17dp"
                android:layout_marginRight="14dp"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.SlidingPaneLayout>