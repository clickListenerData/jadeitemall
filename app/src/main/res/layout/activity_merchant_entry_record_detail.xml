<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Personal.activity.MerchantEntryRecordDetailActivity">
    <include layout="@layout/item_title"
        android:id="@+id/il_title"/>
    <ScrollView
        android:layout_below="@+id/il_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_kefu">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核中"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:textSize="17sp"
                android:textColor="@color/green_06A366"
                android:layout_marginLeft="@dimen/dp_14"/>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="提交时间"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="2018-12-9"
            android:textColor="@color/black_444444"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
    </LinearLayout>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:text="联系邮箱"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:layout_marginLeft="26dp"/>
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:text="156255625"
                    android:textColor="@color/black_444444"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:layout_marginLeft="26dp"/>
            </LinearLayout>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:text="联系方式"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:layout_marginLeft="26dp"/>
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:text="联系方式"
                    android:textColor="@color/black_444444"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:layout_marginLeft="26dp"/>
            </LinearLayout>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:text="邀请人"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:layout_marginLeft="26dp"/>
                <TextView
                    android:id="@+id/tv_yaoqingren"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:text="不喜欢"
                    android:textColor="@color/black_444444"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:layout_marginLeft="38dp"/>
            </LinearLayout>
            <View
                style="@style/LineGray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业执照"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_333333"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="24dp"/>
            <ImageView
                android:id="@+id/iv_yingye"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:layout_marginLeft="83dp"
                android:layout_marginRight="83dp"
                android:src="@drawable/ic_img_default"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行业特殊附件"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_333333"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="24dp"/>
            <ImageView
                android:id="@+id/iv_fujian"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:layout_marginLeft="83dp"
                android:layout_marginRight="83dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ic_img_default"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_above="@+id/tv_kefu"
        style="@style/LineGray"/>
    <TextView
        android:id="@+id/tv_kefu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_service_n"
        android:text="联系客服"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black_333333"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:drawablePadding="10dp"
        android:textSize="17sp"
        android:layout_marginLeft="@dimen/dp_13"/>
    <include layout="@layout/item_loading"
        android:id="@+id/loading"/>

</RelativeLayout>