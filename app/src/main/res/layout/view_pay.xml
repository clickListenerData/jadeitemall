<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_side_black_r5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_wx"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_wx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/blue_007AFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_15"
                android:textSize="@dimen/sp_17"
                android:drawableLeft="@drawable/ic_wechat_n"
                android:text="微信支付"/>
        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_C8C7CC" />

        <LinearLayout
            android:id="@+id/ll_alipay"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/blue_007AFF"
                android:drawableLeft="@drawable/ic_alipay_n"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="center"
                android:textSize="@dimen/sp_17"
                android:text="支付宝"/>
        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_C8C7CC" />

        <LinearLayout
            android:id="@+id/ll_jifen"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_feicui"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/blue_007AFF"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_15"
                android:drawableLeft="@drawable/ic_integral_n"
                android:gravity="center"
                android:textSize="@dimen/sp_17"
                android:text="积分支付"/>
        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_C8C7CC" />
        <LinearLayout
            android:id="@+id/ll_daifu"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_daifu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/blue_007AFF"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_15"
                android:drawableLeft="@drawable/daifu_"
                android:gravity="center"
                android:textSize="@dimen/sp_17"
                android:text="他人代付"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>