<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_default"
    tools:context=".ui.Personal.activity.ShareActivity"
    android:orientation="vertical">
    <include layout="@layout/item_title"/>
    <include layout="@layout/item_loading"
        android:id="@+id/loading"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/img_head_n"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小明"
            android:layout_toRightOf="@+id/iv_head"
            android:textColor="@color/black_333333"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户通过分享注册将终生与邀请人绑定，邀请人将会获得被邀请人的充值奖励"
            android:layout_toRightOf="@+id/iv_head"
            android:textColor="@color/black_333333"
            android:textSize="13sp"
            android:layout_below="@+id/tv_head"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_erweima"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请码"
        android:textColor="@color/black_333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/tv_yaoqingma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="331333"
        android:textColor="@color/black_333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="17sp" />
    <View
        style="@style/LineGray"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_13"/>
    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/btn_share_link_n"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="331333"
        android:textColor="@color/black_333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/bg_share"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>