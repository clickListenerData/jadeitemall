<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black_333333"
            android:text="近期开始"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black_333333"
            android:text="2018-12-02"
            android:layout_toRightOf="@+id/tv_start"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/tv_start"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black_333333"
            android:text="12052号切石直播"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_15"/>
        <TextView
            android:id="@+id/tv_time_zhibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black_333333"
            android:text="2018-12-02"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="9dp"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black_666666"
            android:text="如果你不能很快的表达出来，说明你还不够了解他"
            android:layout_below="@+id/tv_time_zhibo"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="9dp"
            android:layout_marginRight="40dp"/>
        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/green_06A366"
            android:text="取消"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="9dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"/>
        <View
           style="@style/LineGray"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/tv_content"/>
    </RelativeLayout>
    

</LinearLayout>