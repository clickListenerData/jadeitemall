<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_13">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp">
        <android.support.v7.widget.CardView
            android:id="@+id/ic_goodsImages"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_10">
            <ImageView
                android:id="@+id/iv_goodsImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_img_default"
                android:scaleType="fitXY" />
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/ic_goodsImages"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                android:text="糯冰种飘翠福瓜挂件"
                />

            <TextView
                android:id="@+id/tv_goodsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/sp_14"
                android:text="ACS322332" />

        </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>