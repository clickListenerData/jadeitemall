<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.live.activity.LivePlayerActivity"
    android:background="@color/black_000000"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="visible"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp">
        <RelativeLayout
            android:id="@+id/ll_content"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_live_title"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_livetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="4"
                android:singleLine="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/dp_4"
                android:textSize="12sp"
                android:textColor="@color/white_default"/>

                <TextView
                    android:id="@+id/tv_renshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/white_default"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_below="@+id/tv_livetitle"
                    android:layout_alignStart="@+id/tv_livetitle"/>
                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/white_default"
                    android:text="关注"
                    android:background="@drawable/bg_follow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
        </RelativeLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tv_user"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/datouxiang_"/>
        <LinearLayout
            android:id="@+id/guangkan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_toRightOf="@+id/ll_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cr_one"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/datouxiang_"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cr_two"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/datouxiang_"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cr_three"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/datouxiang_"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cr_four"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/datouxiang_"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cr_five"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/datouxiang_"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/global_btn_close_n"
        android:layout_alignParentRight="true"
        android:layout_marginTop="52dp"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/iv_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_service_n"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="13dp"/>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_live"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="13dp"/>
    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp">
        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gift_nn"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_default"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/bg_live"
            android:imeOptions="actionSend"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_message"
        android:layout_marginLeft="@dimen/dp_15"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_live_message"
            android:paddingLeft="40dp"
            android:text="欢迎"
            android:textColor="@color/white_default"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clapping"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_message"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp">
    </android.support.v7.widget.RecyclerView>
    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_jieshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直播已结束"
        android:textSize="@dimen/sp_17"
        android:layout_centerInParent="true"
        android:textColor="@color/white_default"
        android:visibility="gone"/>

</RelativeLayout>