<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_default"
    tools:context=".ui.Personal.activity.PickGoodsActivity">
    <include layout="@layout/item_title"/>
    <include layout="@layout/item_loading"
        android:id="@+id/loading"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货地址"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black_333333"
        android:layout_marginLeft="@dimen/dp_14"/>
    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="vertical"
        android:background="@drawable/bg_site_n"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="13dp">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小明    1345315522122"
            android:textSize="14sp"
            android:textColor="#0B0827"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州市天河区"
            android:textSize="14sp"
            android:textColor="#0B0827"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/tv_content"
            android:layout_marginRight="40dp"/>

        <ImageView
            android:id="@+id/iv_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/global_btn_right"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="7dp"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="26dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="产品编号"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="2018-12-9"
            android:textColor="@color/black_444444"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
    </LinearLayout>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="产品类型"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
        <TextView
            android:id="@+id/tv_stye"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="2018-12-9"
            android:textColor="@color/black_444444"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
    </LinearLayout>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="备注"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
        <TextView
            android:id="@+id/tv_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="2018-12-9"
            android:textColor="@color/black_444444"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
    </LinearLayout>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="服务费"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
        <TextView
            android:id="@+id/tv_fuwufei"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="2018-12-9"
            android:textColor="@color/black_444444"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginLeft="26dp"/>
    </LinearLayout>
    <View
        style="@style/LineGray"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="立即支付"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:background="@color/bg_EFEFF4"
        android:layout_marginBottom="30dp"/>


</LinearLayout>