<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <mItem name="android:windowFrame">@null</mItem>
        <!-- 是否浮现在activity之上 -->
        <mItem name="android:windowIsFloating">true</mItem>
        <!-- 半透明 -->
        <mItem name="android:windowIsTranslucent">true</mItem>
        <!-- 无标题 -->
        <mItem name="android:windowNoTitle">true</mItem>
        <mItem name="android:background">@android:color/transparent</mItem>
        <!-- 背景透明 -->
        <mItem name="android:windowBackground">@android:color/transparent</mItem>
        <!-- 模糊 -->
        <mItem name="android:backgroundDimEnabled">true</mItem>
        <!-- 遮罩层 -->
        <mItem name="android:backgroundDimAmount">0.5</mItem>
    </style>
</resources>